
  <div class="row">
    <div class="span12 centre">
      <% form_for @user_session, :as => :user_session, :url => { :action => "create" },:html => {:class=>'form-horizontal'} do |f| %>
        <fieldset>
          
          <div class="control-group">
            <!-- Username -->
              <%= f.label :email,"Email", :class => 'control-label' %>
            <div class="controls">
                <%= f.text_field :email,:class=>'input-xlarge' %>
            </div>
          </div>
          <div class="control-group">
            <!-- Password-->
             <%= f.label :password,"Password", :class => 'control-label' %>
            <div class="controls">
             
              <%= f.password_field :password,:class=>'input-xlarge' %><br />
            </div>
          </div>
          <div class="control-group">
            <!-- Button -->
            <div class="controls">
              <%= f.submit "Login" ,:class => "btn btn-success" %>
            </div>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>