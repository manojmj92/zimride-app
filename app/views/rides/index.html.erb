<div class="row centre_rides">
<div class="span12">
	<% if @rides.present? %>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>From</th>
						<th>To</th>
						<th>Date</th>
						<th>Cost</th>
						<th>Car</th>
						<th>Seats Remaining</th>
						<th>Status</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @rides.each do |ride| %>

			    	<tr>
			    		<td><%=ride.from %></td>
			     		<td><%=ride.to%></td>
						<td><%=ride.date%></td>
						<td><%=ride.cost%></td>
						<td><%=ride.car.typeofcar%></td>
						<td><%=ride.seats_available%></td>
						<% if ride.status %>
							<td>Scheduled</td>
						<% else %>
							<td>Cancelled</td>
						<% end %>
						
						<% if ride.status %>
						<td><%= button_to "Edit",  edit_user_ride_path(:id => ride.id,:user_id => ride.user_id), :method => "get", :class => 'btn btn-success' %></td>
						<td><%= link_to "Delete",  user_ride_path(:id => ride.id,:user_id => current_user.id), :method => :delete,:confirm => "Are you sure?" ,:class => 'btn btn-danger' %></td>
						<% end %>
			     	</tr>
					<% end %>
				</tbody>
			</table>
</div>
</div>
	<% else %>
		<div class="span8 offset2">
			<%= render "shared/errors"%>
			<h4>You have not posted any rides.</h4>
		</div>
	<% end %>
